
<% if @party.paid %>

	<h2>Table Number: <%=@party.table_number %></h2>
	<h2>Server: <%=@party.employee.name %></h2>
	<h2>This table has checked out already!</h2>

<% else %>

	<h2>Table Number: <%=@party.table_number %></h2>
	<h2>Server: <%=@party.employee.name %></h2>

	<form action="/parties/<%= @party.id %>/checkout" method='POST'>
		<div class="form-text">
		Tip 
		</div>
		<input type="number" step="0.01" name='party[tips]' value="0" ><br>
		
		<input type="hidden" name="party[paid]" value="1">
		<input type="hidden" name="_method" value="PATCH">

		<input type="submit" value="Mark as PAID">
	</form>	

<% end %>